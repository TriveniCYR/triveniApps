@model AACalc.Entity.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>RAA Calculator - Sign In</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="~/Content/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/dist/css/skins/_all-skins.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
</head>
<body>
    @*Added by YReddy on 12/10/2015*@
    <div class="hold-transition skin-blue sidebar-mini ">
        <header class="main-header">
            <!-- Logo -->
            <a href="index2.html" class="logo">
                <span class="logo-mini"><b>RAA</b></span>
                <span class="logo-lg"><b>RAA Calculator</b></span>
            </a>
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">

                </div>
            </nav>
        </header>

        <div class="row">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <div class="col-md-6 content-wrapper" style="margin: 10% 0% 0% 20%;">
                    <!-- Horizontal Form -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">RAA Calculator Login</h3>
                        </div>
                        <form class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">UserName</label>
                                    <div class="col-sm-10">
                                        @*<input type="email" class="form-control" id="txtUserName" placeholder="UserName">*@
                                        @Html.TextBoxFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "UserName" } })
                                    </div>
                                </div>
                                <div class="form-group"></div>
                                <div class="form-group">
                                    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                                    <div class="col-sm-10">
                                        @*<input type="password" class="form-control" id="txtPassword" placeholder="Password">*@
                                        @Html.TextBoxFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                                    </div>
                                </div>
                                @*<div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox"> Remember me
                                                </label>
                                            </div>
                                        </div>
                                    </div>*@
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer">
                                <button type="submit" class="btn btn-default">Cancel</button>
                                <button type="submit" class="btn btn-info pull-right">Sign in</button>
                            </div>
                            <!-- /.box-footer -->
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
